<div class="order-form-container">
		<div class="order-form-content-container">
			<div class="order-form-header">Contact info:</div>
			

			<!-- Form Start-->
			<form action="/emailroute" class="order-form">
			<%= form_for(@order, url: new_order_path(@order), :html => { :multipart => true }) do |f| %>

			  <input type="text" name="name" placeholder="full name">
			  

			  <br>
			  <input type="text" name="email" placeholder="email"><br>
			  <input type="text" name="phone" placeholder="phone number"><br>
			  <div class="order-form-header">Select your box:</div>
			  <br>
			  <div class="row">
			  	<div class="six columns">
				  <input type="checkbox" name="produce box" value="produce">
				  
				  		<div class="produce-box-header">produce box $10</div><br>
				  		<div class="produce-box-body">contains tomatoes, cucumber, apples, carrots, romaine lettuce, blueberries and peaches</div>
				  <br>
				</div>
				<div class="six columns">
				  <input type="checkbox" name="snack box" value="snack">
				  		<div class="produce-box-header">snack box $10</div><br>
				  		<div class="produce-box-body">contains variety nut mix, donuts, flowers, dried fruits, fresh granola bars, quinoa</div>
				  <br>
				</div>
			  </div>
			  <div class="order-form-header">Add items a la carte ($3 per item):</div>
			  <br>
			  <div class="row">
			  	<div class="four columns">
				  <input type="checkbox" name="bananas" value="bananas"><div class="items">bananas</div>
				  <br>
				  <input type="checkbox" name="strawberries" value="strawberries"><div class="items">strawberries</div>
				  <br>
				  <input type="checkbox" name="oranges" value="oranges"><div class="items">oranges</div>
				  <br>
				</div>
				<div class="four columns">
				  <input type="checkbox" name="coffee beans" value="coffee beans"><div class="items">coffee beans</div>
				  <br>
				  <input type="checkbox" name="pretzels" value="pretzels"><div class="items">pretzels</div>
				  <br>
				  <input type="checkbox" name="almonds" value="almonds"><div class="items">almonds</div>
				  <br>
				</div>
				<div class="four columns">
				  <input type="checkbox" name="kale" value="kale"><div class="items">kale</div>
				  <br>
				  <input type="checkbox" name="peanut butter" value="peanut butter"><div class="items">peanut butter</div>
				  <br>
				  <input type="checkbox" name="tomatoes" value="tomatoes"><div class="items">tomatoes</div>
				  <br>
				</div>
			  </div>
			  <div class="order-form-header">Comments:</div>
			  <br>
			  please specify any dietary restrictions so we may accomodate you<br><textarea></textarea>
			  <div class="order-form-header">Discount code:</div>
			  <br>
			  <input type="text" name="discount code">
			  <div class="order-form-header">Questions?</div>
			  <br>
			  <div class="order-form-questions">If you have any questions about your order, please feel free to contact us at <strong>greenstogrounds@gmail.com</strong></div>
			  <br><br>
			  <input type="image" value="Submit" src="/assets/submit.png">
			<% end %>
			</form>

		</div>
	</div>